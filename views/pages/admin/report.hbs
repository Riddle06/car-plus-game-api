<div>
  <h2>營運報表</h2>
  <div class="form-wrap">
    <el-form>
      <el-form-item label="日期">
        <el-date-picker type="daterange" v-model="dateGap" range-separator="至" start-placeholder="開始日期"
          end-placeholder="结束日期">
        </el-date-picker>
      </el-form-item>
    </el-form>
  </div>


  <div class="text-right row-block">
    <el-row type="flex" align="middle" justify="space-between">
      <el-col class="text-left">
        {{!-- <el-button type="primary" icon="el-icon-search" @click="getDashboard(true)">搜尋</el-button> --}}
        <el-button type="info" @click="exportExcel">匯出Excel</el-button>
      </el-col>
      <el-col>
      </el-col>
    </el-row>
  </div>

  <el-table :data="reports" height="65vh" header-align="center" stripe border highlight-current-row>
    <el-table-column label="Day" align="center">
      <template slot-scope="scope">
        \{{ $g_formatDateTime(scope.row.date) }}
      </template>
    </el-table-column>
    <el-table-column label="營運人次">
      <el-table-column label="登入人次" prop="memberCount" align="center"></el-table-column>
      <el-table-column label="遊戲場次" prop="gameCount" align="center"></el-table-column>
      <el-table-column label="平均遊戲場數(場次/人次)" prop="memberHasPlayGameCount" align="center"></el-table-column>
    </el-table-column>
    <el-table-column label="超人接接樂">
      <el-table-column label="場數" prop="memberCount" align="center"></el-table-column>
      <el-table-column label="獲得分數" prop="gameCount" align="center"></el-table-column>
      <el-table-column label="獲得超人幣" prop="memberHasPlayGameCount" align="center"></el-table-column>
    </el-table-column>
    <el-table-column label="射擊吧超人">
      <el-table-column label="場數" prop="memberCount" align="center"></el-table-column>
      <el-table-column label="獲得分數" prop="gameCount" align="center"></el-table-column>
      <el-table-column label="獲得超人幣" prop="memberHasPlayGameCount" align="center"></el-table-column>
    </el-table-column>
    <el-table-column label="紅利兌換">
      <el-table-column label="超人幣消費量" prop="memberCount" align="center"></el-table-column>
      <el-table-column label="格上紅利消費量" prop="gameCount" align="center"></el-table-column>
    </el-table-column>
  </el-table>

</div>

<script src="/static/js/admin.report.bundle.js"></script>