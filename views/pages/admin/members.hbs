<div>
  <h2>會員總覽</h2>
  <div style="max-width: 550px">
    <el-form>
      <el-form-item label="會員Id">
        <el-input placeholder="請輸入會員Id"></el-input>
      </el-form-item>
    </el-form>
  </div>

  <div class="text-right row-block">
    <el-row type="flex" align="middle" justify="space-between">
      <el-col class="text-left">
        <el-button type="primary" icon="el-icon-search">搜尋</el-button>
        <el-button type="info">匯出Excel</el-button>
      </el-col>
      <el-col>
        <el-pagination :currentPage.sync="page.index" background layout="prev, pager, next" :pageSize="page.size"
          :total="page.dataAmount" @currentChange="handlePageChange">
        </el-pagination>
      </el-col>
    </el-row>
  </div>

  <el-table :data="members" row-key="id" header-align="center" stripe border highlight-current-row>
    <el-table-column label="id" prop="carPlusMemberId"></el-table-column>
    <el-table-column label="暱稱" prop="nickName"></el-table-column>
    <el-table-column label="等級" prop="level"></el-table-column>
    <el-table-column label="經驗值" prop="experience"></el-table-column>
    <el-table-column label="超人幣" prop="gamePoint"></el-table-column>
    <el-table-column label="格上紅利" prop="carPlusPoint"></el-table-column>
    <el-table-column label="道具">
      <template slot-scope="scope">
        \{{ scope.row.gameItems }}
      </template>
    </el-table-column>
    <el-table-column label="操作">
      <template slot-scope="scope">
        <el-button type="danger" size="mini">封鎖</el-button>
      </template>
    </el-table-column>
  </el-table>
</div>

<script src="/static/js/admin.members.bundle.js"></script>