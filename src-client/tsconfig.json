{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": false,
        "sourceMap": true,
        "outDir": "./dist-client",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "baseUrl": "../src",
        "lib": [
            "es2015",
            "dom",
            "es2017"
        ],
        "paths": {
            "@view-models/*": [
                "view-models/*"
            ]
        }
    },
    "include": [
        "./**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}